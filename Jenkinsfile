pipeline {
    agent none
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application after changes..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
}
